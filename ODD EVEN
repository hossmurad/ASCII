.MODEL SMALL
.STACK 100H
.DATA
  MSG1 DB "THE NUMBER IS EVEN  $"
  MSG2 DB "THE NUMBER IS ODD  $"
  
.CODE
  MAIN PROC
    MOV AX,@DATA
    MOV DS,AX
    
   ;INPUT AN SINGLE NUMBER
   MOV AH,1
   INT 21H
   
   AND AL,0001H
   
   CMP AL,0
   JE EVEN
   JNE ODD
   
   EVEN:
    MOV AH,9
    LEA DX,MSG1
    INT 21H
    JMP EXIT
    
   ODD:
   MOV AH,9
   LEA DX,MSG2
   INT 21H
   JMP EXIT  
    
    
   EXIT:
   MOV AH,4CH
   INT 21H 
    
    
    MAIN ENDP
  END MAIN
